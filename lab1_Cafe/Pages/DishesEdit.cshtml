@page
@model lab1_Cafe.Pages.DishesEditModel
@{
    ViewData["Title"] = "DishesEdit";
}
<div class="text-left">
    <form method="post" class="w-25">
        <div class="form-group">
            <label>Название: </label>
            <input class="form-control" type="text" name="title" value="@Model.DishTitle" required />
        </div>
        <div class="form-group">
            <label>Тип: </label>
            <select class="custom-select" name="type">
                @foreach (DataRow row in Model.TypesSet.Tables["Table"].Rows)
                {
                    @if (Model.DishType == row[1].ToString())
                    {
                        <option value="@row[0]" selected>@row[1]</option>
                    }
                    else
                    {
                        <option value="@row[0]">@row[1]</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label>Цена: </label>
            <input class="form-control" type="text" name="price" value="@Model.DishPrice" pattern="[1-9][0-9]*[,]?[0-9]*|[0-9]+[,][0-9]+" required/>
            <small class="form-text text-muted">Используйте запятую для указания дробной части.</small>
        </div>
        <button class="btn btn-secondary" type="submit" asp-route-id="@Model.DishId">Изменить</button>
    </form>
</div>
@page
@model lab1_Cafe.Pages.RecipesEditModel
@{
    ViewData["Title"] = "RecipesEdit";
}
<div class="text-left">
    <form method="post" class="w-25">
        <div class="form-group">
            <label>Блюдо: </label>
            <select class="custom-select" name="dish">
                @foreach (DataRow row in Model.DishesSet.Tables["Table"].Rows)
                {
                    @if (Model.RecipeDish == row[1].ToString())
                    {
                        <option value="@row[0]" selected>@row[1]</option>
                    }
                    else
                    {
                        <option value="@row[0]">@row[1]</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label>Ингредиент: </label>
            <select class="custom-select" name="ingredient">
                @foreach (DataRow row in Model.IngredientsSet.Tables["Table"].Rows)
                {
                    @if (Model.RecipeIngredient == row[1].ToString())
                    {
                        <option value="@row[0]" selected>@row[1]</option>
                    }
                    else
                    {
                        <option value="@row[0]">@row[1]</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label>Количество: </label>
            <input class="form-control" type="text" name="count" value="@Model.RecipeCount" pattern="[1-9][0-9]*[,]?[0-9]*|[0-9]+[,][0-9]+" required/>
            <small class="form-text text-muted">Используйте запятую для указания дробной части.</small>
        </div>
        <button class="btn btn-secondary" type="submit" asp-route-id="@Model.RecipeId">Изменить</button>
    </form>
</div>
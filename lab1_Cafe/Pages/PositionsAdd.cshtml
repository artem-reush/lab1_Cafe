@page
@model lab1_Cafe.Pages.PositionsAddModel
@{
    ViewData["Title"] = "PositionsAdd";
}
<div class="text-left">
    <h2>Добавить позицию</h2>
    <form method="post" class="w-25">
        <div id="items">
            <div class="item">
                <div class="form-group">
                    <label>Блюдо: </label>
                    <select id="select-item" class="custom-select" name="dish">
                        @foreach (DataRow row in Model.DishSet.Tables["Table"].Rows)
                        {
                            <option value="@row[0]">@row[1]</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Количество: </label>
                    <input class="form-control" type="text" name="count" pattern="[1-9][0-9]*" required/>
                    <small class="form-text text-muted">Используйте только целые числа.</small>
                </div>
            </div>
        </div>
        <button class="btn btn-secondary" type="submit" asp-route-id="@Model.OrderId">Добавить</button>
    </form>
</div>